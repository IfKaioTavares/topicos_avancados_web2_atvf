# Configurações do Simulador IoT

# ID único do recurso (obrigatório)
RESOURCE_ID=LAB001

# Duração do timeout em minutos (padrão: 30 minutos)
TIMEOUT_DURATION_MINUTES=30

# URL do backend
BACKEND_URL=http://localhost:8080

# Intervalo de envio de status em segundos (padrão: 30 segundos)
STATUS_INTERVAL_SECONDS=30

# Porta do servidor local (padrão: 3000)
PORT=3000

# === Liberação Automática ===
# Habilitar liberação automática aleatória (true/false)
AUTO_RELEASE_ENABLED=true

# Probabilidade de liberação automática por verificação (0.0 - 1.0)
# 0.05 = 5% de chance a cada verificação
AUTO_RELEASE_PROBABILITY=0.05

# Intervalo mínimo em minutos antes de poder liberar automaticamente
AUTO_RELEASE_MIN_MINUTES=5